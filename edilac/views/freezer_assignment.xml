<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_freezer_assignment_form" model="ir.ui.view">
            <field name="name">freezer.assignment.form</field>
            <field name="model">freezer.assignment</field>
            <field name="arch" type="xml">
                <form string="Freezer Assignment">
                    <header>
                        <button name="action_submit" type="object" string="Submit" states="new" class="oe_highlight"/>
                        <button name="action_validate" type="object" string="Validate" states="adv"/>
                        <button name="action_approve" type="object" string="Approve" states="stock_management"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,adv,stock_management"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="customer_id"/>
                            <field name="customer_number"/>
                            <field name="customer_email"/>
                            <field name="product_serial_number"/>
                            <field name="product_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_freezer_assignment_tree" model="ir.ui.view">
            <field name="name">freezer.assignment.tree</field>
            <field name="model">freezer.assignment</field>
            <field name="arch" type="xml">
                <tree string="Freezer Assignments">
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="customer_number"/>
                    <field name="customer_email"/>
                    <field name="product_serial_number"/>
                    <field name="product_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>