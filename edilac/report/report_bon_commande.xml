                                    </th>
                                </tr>
                            </thead>
                           
                            <tbody>
                                <t t-set="total" t-value="0"/>
                                <t t-foreach="o.group_products_and_quantities()" t-as="product_data">
                                    <t t-set="total" t-value="total + product_data['total_quantity']"/>
                                    <tr>
